@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    Hello, @context?.User?.Identity?.Name!<a href="api/account/SignOut">Sign out</a>
                </Authorized>
                <NotAuthorized>
                    <a href="/login">Login</a>
                </NotAuthorized>
            </AuthorizeView>

            
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
